                                                                <label>
                                                                    <input type="checkbox" class="CanInsert"
                                                                           value="true"
                                                                           @(modelPur != null && modelPur.CanInsert ? "checked='checked'" : "")>
                                                                    <span class="button-indecator">新增</span>
                                                                </label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-2 col-xs-2">
                                                            <div class="toggle">
                                                                <label class="semibold-text">
