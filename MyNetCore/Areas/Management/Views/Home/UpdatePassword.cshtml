
@{
    ViewBag.Title = "修改密码";
}

<div class="page-title">
    <div>
        <h1><i class="fa fa-edit"></i>用户</h1>
        <p>修改密码</p>
    </div>
    <div>
        <ul class="breadcrumb">
            <li><a href="~/Management/Home/Index"><i class="fa fa-home fa-lg"></i></a></li>
            <li>用户</li>
            <li class="active">修改密码</li>
        </ul>
    </div>
</div>

<ul class="nav nav-tabs" role="tablist">
    <li id="tab1Title" role="presentation" class="active">
        <a href="#tab1" aria-controls="tab1" role="tab" data-toggle="tab">详情</a>
    </li>
    <li id="tab2Title" role="presentation">
        <a id="tab2A" href="#tab2" aria-controls="tab2" role="tab" data-toggle="tab">明细</a>
    </li>
</ul>

<div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="tab1">
        <div class="card">
            <div class="row">
                <div class="col-md-12">
                    <div class="well bs-component">
                        <form id="addForm" class="form-horizontal" method="post">
                            <fieldset>

                                <div class="form-group">

                                    <div class="col-md-6">
                                        <label class="control-label" for="PassWord">*请输入新密码</label>
                                        <input class="form-control required password" id="PassWord" name="PassWord" type="password" readonly="readonly"
                                               placeholder="请输入新密码">
                                    </div>

                                    <div class="col-md-6">
                                        <label class="control-label" for="RePassWord">*确认输入密码</label>
                                        <input class="form-control required password" id="RePassWord" name="RePassWord" type="password" readonly="readonly"
                                               placeholder="确认输入密码" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        <button class="btn btn-primary btn-loading needValid btn-add ajaxSaveForOther" validFor="addForm" type="button" actionName="UpdatePassword">保存</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>